# Environment Configuration
# Copy this file to .env and update with your actual values

# Application
NODE_ENV=development
BACKEND_PORT=3000

# Database Configuration
POSTGRES_DB=booking_system
POSTGRES_USER=booking_user
POSTGRES_PASSWORD=booking_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://booking_user:booking_password@localhost:5432/booking_system

# Test Database
POSTGRES_TEST_DB=booking_system_test
POSTGRES_TEST_HOST=localhost
POSTGRES_TEST_PORT=5433
POSTGRES_TEST_USER=booking_user
POSTGRES_TEST_PASSWORD=booking_password
DATABASE_TEST_URL=postgresql://booking_user:booking_password@localhost:5433/booking_system_test

# Redis Configuration
REDIS_PASSWORD=redis_password
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://:redis_password@localhost:6379
REDIS_TEST_URL=redis://:redis_password@localhost:6380

# JWT Configuration
JWT_ACCESS_SECRET=your-access-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
ACCESS_TOKEN_TTL=1h
REFRESH_TOKEN_TTL=7d
TOKEN_ISSUER=calendar-booking-system
TOKEN_AUDIENCE=calendar-booking-clients
REFRESH_TOKEN_COOKIE_NAME=refreshToken

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3000/api/v1

# Email Configuration (for future notification plugin)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# SMS Configuration (for future notification plugin)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack Configuration (for future notification plugin)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# MCP Server Configuration (Phase 3)
MCP_SERVER_PORT=3001
MCP_API_KEY=your-mcp-api-key-change-in-production

# Cache Configuration
CACHE_TTL_AVAILABILITY=900
CACHE_TTL_CALENDAR=3600
CACHE_TTL_SKILLS=14400

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# RBAC & Roles
RBAC_DEFAULT_ROLE=client
RBAC_ENABLE_CACHING=true
RBAC_CACHE_TTL=3600

# Audit Logging
AUDIT_LOG_LEVEL=info
AUDIT_BATCH_SIZE=100
AUDIT_BATCH_INTERVAL=5000
AUDIT_EXCLUDE_ENDPOINTS=/health,/metrics

# Waitlist Configuration
WAITLIST_MAX_SIZE=100
WAITLIST_AUTO_PROMOTE=true
WAITLIST_PROMOTION_DELAY=300

# Group Booking
GROUP_BOOKING_MAX_PARTICIPANTS=10
GROUP_BOOKING_TIMEOUT=300000

# Feature Flags
FEATURE_FLAG_GROUP_BOOKINGS=true
FEATURE_FLAG_WAITLIST=true
FEATURE_FLAG_NOTIFICATIONS=false

# Monitoring (Phase 3-4)
PROMETHEUS_PORT=9090
